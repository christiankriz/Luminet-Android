<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/user_detail_button"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:text="Set User Name, Surname And Display Picture"
        android:drawableLeft="@drawable/no_foto_available"
        android:drawablePadding="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/to_change_password_screen_button"
        android:text="Change Passowrd"
        android:background="@drawable/my_button"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/support_button"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:text="Support"
        android:background="@drawable/my_button"/>

    <Button
        android:id="@+id/terms_and_condition_button"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:text="Terms and Conditions"
        android:background="@drawable/my_button"/>

    <Button
        android:id="@+id/about_button"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:text="About"
        android:background="@drawable/my_button"/>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:text="Logout"
        android:background="@drawable/my_button"/>

  </LinearLayout>

</ScrollView>