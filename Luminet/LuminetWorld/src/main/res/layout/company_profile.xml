<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/luminet_toolbar" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/company_logo"
                android:layout_width="100dp"
                android:layout_height="81dp"
                android:src="@drawable/lumi_logo"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/company_logo"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_large"
                android:ems="10"
                />

            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/company_logo"
                android:layout_below="@id/company"
                android:textColor="@color/blue_gray_600"
                android:ems="10"
                android:textSize="12dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/add_remove_call_enterprise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/company_logo"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/facebook_icon"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:background="@drawable/rectangle_border"
            android:paddingBottom="10dp"/>

        <ImageView
            android:id="@+id/instagram"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/instagram_icon"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@drawable/rectangle_border"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/twitter_icon"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@drawable/rectangle_border"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            />

        <ImageView
            android:id="@+id/chat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/action_one"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@drawable/rectangle_border"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            />

        <ImageView
            android:id="@+id/call"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/call_organisation"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@drawable/rectangle_border"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

       <TextView
            android:id="@+id/Home"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Home"
            android:background="@color/indigo_100"
            />

        <TextView
            android:id="@+id/Home2"
            android:background="@color/indigo_100"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Home2"
            />
        <TextView
            android:id="@+id/new_link"
            android:background="@color/indigo_100"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Link"
            />
        <TextView
            android:id="@+id/about"
            android:background="@color/indigo_100"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="about"
            />
        <TextView
            android:id="@+id/contact_us"
            android:background="@color/indigo_100"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Contact Us"
            />
        <TextView
            android:id="@+id/find_us_on_facebook"
            android:background="@color/indigo_100"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="find us on Facebook"
            />
        <TextView
            android:id="@+id/find_us_on_twitter"
            android:background="@color/indigo_100"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="find us on Twitter"
            />
        <TextView
            android:id="@+id/website"
            android:background="@color/indigo_100"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/company_logo"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Website"
            />


    </LinearLayout>

</LinearLayout>
