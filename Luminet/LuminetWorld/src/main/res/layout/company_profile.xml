<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/luminet_toolbar" />

    <RelativeLayout
        android:id="@+id/company_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@layout/luminet_toolbar"
        >

        <ImageView
        android:id="@+id/company_logo"
        android:layout_width="81dp"
        android:layout_height="90dp"
        android:paddingTop="5dp"
        android:paddingLeft="20dp"
        app:srcCompat="@drawable/lumi_logo"
        />

        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/company_logo"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:textStyle="bold"
            android:textSize="30dp"
            />

        <TextView
            android:id="@+id/message"
            android:layout_width="187dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/company"
            android:layout_toRightOf="@id/company_logo"
            android:visibility="invisible"
            android:background="@drawable/text_view_boader"/>


    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/company_info"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/add_company"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingTop="5dp"
            android:src="@drawable/lumi_logo"
            android:paddingLeft="5dp"
            />

        <TextView
            android:id="@+id/Home"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Home"
            android:background="@drawable/text_view_boader"
            />

        <TextView
            android:id="@+id/Home2"
            android:background="@color/indigo_100"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Home2"
            />
        <TextView
            android:id="@+id/new_link"
            android:background="@color/indigo_100"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Link"
            />
        <TextView
            android:id="@+id/about"
            android:background="@color/indigo_100"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="about"
            />
        <TextView
            android:id="@+id/contact_us"
            android:background="@color/indigo_100"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Contact Us"
            />
        <TextView
            android:id="@+id/find_us_on_facebook"
            android:background="@color/indigo_100"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="find us on Facebook"
            />
        <TextView
            android:id="@+id/find_us_on_twitter"
            android:background="@color/indigo_100"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="find us on Twitter"
            />
        <TextView
            android:id="@+id/website"
            android:background="@color/indigo_100"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/company_logo"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Website"
            />


    </LinearLayout>

</RelativeLayout>
